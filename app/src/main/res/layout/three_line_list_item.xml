<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/three_line_list_item_background"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@color/md_light_background"
    android:clipChildren="false"
    android:elevation="1dp"
    android:outlineProvider="bounds"
    android:padding="0dp"
    android:transitionGroup="true"
    android:transitionName="three_line_list_item_background"
    tools:targetApi="lollipop">

    <TextView
        android:id="@+id/three_line_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/three_line_list_item_date"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:text="@string/announcement"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="16sp"
        android:transitionName="three_line_list_item_title" />

    <TextView
        android:id="@+id/three_line_list_item_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/three_line_list_item_title"
        android:layout_marginStart="16dp"
        android:elegantTextHeight="false"
        android:ellipsize="end"
        android:minLines="1"
        android:text="@string/placeholder_teacher_name"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:id="@+id/three_line_list_item_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/three_line_list_item_first"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:tag="content"
        android:text="@string/placeholder_announcement" />

    <TextView
        android:id="@+id/three_line_list_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/three_line_list_item_first"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/placeholder_date"
        android:textSize="14sp" />

    <View
        android:id="@+id/three_line_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/md_divider_black" />

</RelativeLayout>